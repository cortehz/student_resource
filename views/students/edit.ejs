<% include ../partials/header %>


<div class="container">
    <div class="row">
            <h1 class="text-center" style="margin-bottom:3%;">Edit student</h1>
                <div style="width: 30%; margin: 0 auto;">
                        <form action="/courses/<%= course_id %>/students/<%= student._id %>?_method=PUT" method="POST">
