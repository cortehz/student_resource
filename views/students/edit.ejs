                                <input class="form-control" type="text" value="<%= student.text %>" name="student[text]" required>
                            </div>

                            <div class="delete-form form-group">
                                <button class="btn btn-primary btn-lg btn-block">Edit student</button>
                            </div>

                        </form>
                        <a href="/courses">Go Back</a>
                </div>
       

    </div>

</div>
