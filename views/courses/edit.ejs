<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 class="text-center" style="margin-bottom:3%;">Edit
                <%= course.name %>
            </h1>
            <div style="width: 30%; margin: 0 auto;">
                <form action="/courses/<%= course._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= course.name %>" name="course[name]">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="number" value="<% course.price %>" min="10" step="1" name="course[price]">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= course.image %>" name="course[image]">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= course.description %>" name="course[description]">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit course</button>
                    </div>

                </form>

                <a href="/courses">Go Back</a>
            </div>


        </div>

    </div>
    <% include ../partials/footer %>