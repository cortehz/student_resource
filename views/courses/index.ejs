    <% include ../partials/header %>

        <h1 class="display-4 text-center">Available Courses</h1>
        <hr class="bg-dark mb-4 w-25">

        <div class="container container mt-4 mb-5">
            <% courses.forEach(function(course){ %>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <img class="card-img-top" src="<%= course.image %>" alt="Card image cap">
                            <div class="card-block p-3">
                                <h4 class="card-title">
                                    <%= course.name %>
                                </h4>
                                
                                <a href="/courses/<%= course._id %>" class="btn btn-primary btn-small rounded-0 mb-2 courses">Details</a>
                                <a href="/courses/<%= course._id %>/students/new" class="btn btn-primary btn-small rounded-0 mb-2 courses">Register</a>
                            </div>
                            
                        </div>
                    </div>
                    <% }); %>
                </div>
                
        <!-- Card -->
        </div>
        <br>
</div>
