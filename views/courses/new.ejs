<% include ../partials/header %>


<div class="container">
    <div class="row">
            <h1 class="text-center" style="margin-bottom:3%;">Create a New course</h1>
                <div style="width: 30%; margin: 0 auto;">
                        <form action="/courses" method="POST">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Course Title" name="name" required>
                            </div>

                            <div class="form-group">
                                <input class="form-control" type="number" placeholder="Course Price($)" min="10" step="1" name="price" required>
                            </div>
                            
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Course Image URl" name="image" required>
                            </div>

                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Course Description" name="description" required>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary btn-lg btn-block">Submit course</button>
                            </div>

                        </form>
                        <a href="/courses">Go Back</a>
                </div>
       

    </div>

</div>
<% include ../partials/footer %>